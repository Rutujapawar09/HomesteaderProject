@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">📊 Admin Dashboard</h2>
        <div>
            @* <span class="me-3">Welcome, <strong>@HttpContext.Session.GetString("UserName")</strong></span> *@
            <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row g-3 mb-4">
        <div class="col-md-2">
            <div class="card text-center p-3 bg-success text-white">
                <h2>@ViewBag.TotalFarmers</h2>
                <small>Farmers</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center p-3 bg-info text-white">
                <h2>@ViewBag.TotalStudents</h2>
                <small>Students</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center p-3 bg-warning text-white">
                <h2>@ViewBag.TotalAgencies</h2>
                <small>Agencies</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center p-3 bg-primary text-white">
                <h2>@ViewBag.TotalCrops</h2>
                <small>Crops</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center p-3 bg-danger text-white">
                <h2>@ViewBag.TotalFeedback</h2>
                <small>Feedbacks</small>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center p-3 bg-dark text-white">
                <h2>@ViewBag.PendingFarmers</h2>
                <small>Pending</small>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow text-center p-4">
                <i class="bi bi-people" style="font-size: 3rem; color: #198754;"></i>
                <h5 class="mt-3">Manage Farmers</h5>
                <p class="text-muted">Approve/View farmers</p>
                <a asp-action="ManageFarmers" class="btn btn-success">Manage</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center p-4">
                <i class="bi bi-building" style="font-size: 3rem; color: #ffc107;"></i>
                <h5 class="mt-3">Manage Agencies</h5>
                <p class="text-muted">Approve/View agro agencies</p>
                <a asp-action="ManageAgencies" class="btn btn-warning">Manage</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center p-4">
                <i class="bi bi-tree" style="font-size: 3rem; color: #0d6efd;"></i>
                <h5 class="mt-3">Manage Crops</h5>
                <p class="text-muted">Add/Edit crops data</p>
                <a asp-action="ManageCrops" class="btn btn-primary">Manage</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center p-4">
                <i class="bi bi-cash-coin" style="font-size: 3rem; color: #20c997;"></i>
                <h5 class="mt-3">Market Prices</h5>
                <p class="text-muted">Update market prices</p>
                <a asp-action="ManagePrices" class="btn btn-info">Update</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center p-4">
                <i class="bi bi-file-earmark-text" style="font-size: 3rem; color: #6f42c1;"></i>
                <h5 class="mt-3">Soil Reports</h5>
                <p class="text-muted">Add soil analysis</p>
                <a asp-action="ManageSoilReports" class="btn btn-dark">Manage</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center p-4">
                <i class="bi bi-chat-dots" style="font-size: 3rem; color: #dc3545;"></i>
                <h5 class="mt-3">View Feedback</h5>
                <p class="text-muted">See user feedback</p>
                <a asp-action="ViewFeedback" class="btn btn-danger">View</a>
            </div>
        </div>
    </div>
</div>