@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">🌾 Farmer Dashboard</h2>

    <div class="row g-4">

        <!-- Crop Guidance -->
        <div class="col-md-3">
            <div class="card border-success shadow text-center">
                <div class="card-body">
                    <h5 class="card-title">Crop Guidance</h5>
                    <p class="card-text">Best crops based on soil & season</p>
                    <a asp-controller="Crop" asp-action="Index" class="btn btn-success btn-sm">View</a>
                </div>
            </div>
        </div>

        <!-- Fertilizer -->
        <div class="col-md-3">
            <div class="card border-primary shadow text-center">
                <div class="card-body">
                    <h5 class="card-title">Fertilizers</h5>
                    <p class="card-text">Recommended fertilizers</p>
                    <a asp-controller="Fertilizer" asp-action="Index" class="btn btn-primary btn-sm">View</a>
                </div>
            </div>
        </div>

        <!-- Market Prices -->
        <div class="col-md-3">
            <div class="card border-warning shadow text-center">
                <div class="card-body">
                    <h5 class="card-title">Market Prices</h5>
                    <p class="card-text">Latest mandi prices</p>
                    <a asp-controller="Market" asp-action="Index" class="btn btn-warning btn-sm">View</a>
                </div>
            </div>
        </div>

        <!-- Weather -->
        <div class="col-md-3">
            <div class="card border-info shadow text-center">
                <div class="card-body">
                    <h5 class="card-title">Weather</h5>
                    <p class="card-text">Climate updates</p>
                    <a asp-controller="Weather" asp-action="Index" class="btn btn-info btn-sm">View</a>
                </div>
            </div>
        </div>

    </div>
</div>
