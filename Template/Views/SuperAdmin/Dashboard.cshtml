@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success">Super Admin Dashboard</h2>
        <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow text-center p-4">
                <i class="bi bi-person-check" style="font-size: 3rem; color: #198754;"></i>
                <h5 class="mt-3">Approve Admins</h5>
                <p class="text-muted">Review and approve admin registrations</p>
                <a asp-action="PendingAdmins" class="btn btn-success mt-2">
                    Manage Admins
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow text-center p-4">
                <i class="bi bi-people" style="font-size: 3rem; color: #198754;"></i>
                <h5 class="mt-3">View All Users</h5>
                <p class="text-muted">See all registered users</p>
                <a asp-action="AllUsers" class="btn btn-success mt-2">
                    View Users
                </a>
            </div>
        </div>
    </div>
</div>