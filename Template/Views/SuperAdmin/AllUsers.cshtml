@model List<Template.Models.User>

@{
    ViewData["Title"] = "All Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>All Registered Users</h3>
        <a asp-action="Dashboard" class="btn btn-secondary">
            ← Back to Dashboard
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No users registered yet
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-success">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Registered On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge 
                                    @(user.Role == "SuperAdmin" ? "bg-danger" : 
                                      user.Role == "Admin" ? "bg-primary" : 
                                      user.Role == "Farmer" ? "bg-success" : 
                                      user.Role == "Student" ? "bg-info" : "bg-warning")">
                                    @user.Role
                                </span>
                            </td>
                            <td>
                                <span class="badge 
                                    @(user.Status == "Approved" ? "bg-success" : 
                                      user.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                    @user.Status
                                </span>
                            </td>
                            <td>@user.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (user.Role != "SuperAdmin")
                                {
                                    @if (user.Status == "Pending" && user.Role == "Admin")
                                    {
                                        <a asp-action="ApproveAdmin" 
                                           asp-route-id="@user.UserId" 
                                           class="btn btn-success btn-sm"
                                           onclick="return confirm('Approve this admin?')">
                                            ✓ Approve
                                        </a>
                                    }
                                    
                                    <a asp-action="DeleteUser" 
                                       asp-route-id="@user.UserId" 
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('Delete this user?')">
                                        ✗ Delete
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Protected</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                Total Users: <strong>@Model.Count</strong>
            </p>
        </div>
    }
</div>